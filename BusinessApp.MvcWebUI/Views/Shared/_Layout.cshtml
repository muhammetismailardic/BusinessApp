<!DOCTYPE html>
<html lang="tr">
@using BusinessApp.CarpetWash.MvcWebUI.Shared
@using BusinessApp.CarpetWash.Entities.Concrete.Enums
<head>
    @await Html.PartialAsync("~/Views/Shared/Partials/_HeaderSection.cshtml")
</head>

<body>
    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-none d-lg-block">
        <div class="container d-flex">
            <div class="contact-info mr-auto">
                <i class="icofont-envelope"></i><a href="mailto:contact@example.com">info.temizpakhaliyikama.com</a>
                <i class="icofont-phone"></i> +90 530 223 5241
            </div>
            <div class="social-links">
                <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
                <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
                <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                <a href="#" class="skype"><i class="icofont-skype"></i></a>
                <a href="#" class="linkedin"><i class="icofont-linkedin"></i></a>
            </div>
        </div>
    </section>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="container d-flex">

            <div class="logo mr-auto">
                <h1 class="text-light"><a asp-controller="Home" asp-action="Index">Gürpak</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                @*<a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="" class="img-fluid"></a>*@
            </div>
            @await Component.InvokeAsync("Navigation")
        </div>
    </header><!-- End Header -->
    <!-- ======= Main Section ======= -->
    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>Gürpak Halı Yıkama</h3>
                        <p>
                            Bahçelievler <br>
                            Istanbul<br>
                            Türkiye <br><br>
                            <strong>Telefon:</strong> +530 223 52 41<br>
                            <strong>Email:</strong> info.temizpakhaliyikama.com<br>
                        </p>
                    </div>

                    <div class="col-lg-2 col-md-6 footer-links">
                        <h4>Site Haritası</h4>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li>
                                <a asp-controller="Contents" asp-action="Index"
                                   asp-route-type="@ContentType.Service"
                                   asp-route-IsFrontSideIndex="@true">
                                    Hizmetler
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Contents" asp-action="Index"
                                   asp-route-type="@ContentType.ServiceRegion"
                                   asp-route-IsFrontSideIndex="@true">
                                    Hizmet Bölgelerimiz
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Contents" asp-action="Index"
                                   asp-route-type="@ContentType.Post"
                                   asp-route-IsFrontSideIndex="@true">
                                    Blog
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="About"
                                   asp-route-type="@ContentType.AboutFeature">
                                    Hakkımızda
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Contact"
                                   asp-route-type="@ContentType.ContactFeature">
                                    İletişim
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Hizmetlerimiz</h4>
                        @await Component.InvokeAsync("Services")
                    </div>

                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4> Hizmet Bölgelerimiz</h4>
                        <p>GürPak halı yıkama olarak kalitemizden ödün vermemek güncel halı yıkama metodlarını her daim takip ederek müşterilerimize en iyi hizmeti sunmaya çalışıyoruz.</p>
                        <form action="#" method="post">
                            <input type="email" name="email"><input type="submit" value="Abone Ol">
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="mr-md-auto text-center text-md-left">
                <div class="copyright">
                    &copy; Copyright <strong><span>Flattern</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/flattern-multipurpose-bootstrap-template/ -->
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>
    @await Html.PartialAsync("~/Views/Shared/Partials/_ScriptSection.cshtml")
</body>
</html>