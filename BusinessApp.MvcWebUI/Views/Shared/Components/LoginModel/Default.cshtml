@model BusinessApp.CarpetWash.MvcWebUI.Models.LoginViewModel
@using BusinessApp.CarpetWash.MvcWebUI.Shared;

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="topnavbar-login-btn reg-modal-log-btn" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="ws-modal-body">
                <h2>Log In</h2>
                @{
                    var modalData = TempData.Get<ModalData>("modal");
                    if (modalData.IsNotNull())
                    {
                        <p class="text-danger modal-error"><b>@modalData.Error</b></p>
                    }
                }
                <form method="post" asp-controller="Account" asp-action="Login">
                    <input name="isFBUser" value="false" hidden />
                    <input name="isGmailUser" value="false" hidden />
                    <div class="text-center social-btn">
                        <a id="fb-login-btn" class="btn btn-primary btn-lg" disabled><i class="fab fa-facebook-f"></i><b>Facebook</b></a>
                        <a id="tw-login-btn" class="btn btn-info btn-lg"><i class="fab fa-twitter"></i><b>Twitter</b></a>
                        <a id="go-login-btn" class="btn btn-danger btn-lg"><i class="fab fa-google"></i><b>Google</b></a>
                    </div>
                    <div class="or-seperator"><i>or</i></div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Username" required="required" maxlength="256">
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                            </div>
                            <input asp-for="Password" type="password" class="form-control" name="password" placeholder="Password" required="required" minlength="6" maxlength="32">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block submit-btn" name="login">Log In</button>
                    </div>
                    <div class="clearfix">
                        <label class="float-left checkbox-inline"><input asp-for="RememberMe" type="checkbox" id="defaultCheck" value="true"> Remember me</label>
                        <a href="#" id="log-modal-forgot-pass-btn" class="float-right text-success" data-toggle="modal" data-target="#forgotPassword-modal" data-dismiss="modal">Forgot Password?</a>
                    </div>
                </form>
            </div>
            <div class="ws-modal-footer">
                <div class="hint-text small">
                    Don't have an account?
                    <a href="#" id="login-modal-reg-btn" data-toggle="modal" data-target="#registration-modal" data-dismiss="modal" class="text-success">
                        <strong>Register Now!</strong>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .modal-content {
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        width: 440px;
        margin: 120px auto;
        border: 0px;
    }

    .modal-open {
        overflow: auto;
        padding-right: 0px !important;
    }

    .ws-modal-body {
        padding: 30px;
    }

        .ws-modal-body h2 {
            color: #333;
            font-weight: bold;
            margin: 0 0 15px;
            text-align: center;
            font-size: 28px;
        }

    .ws-modal-footer {
        padding: 20px;
        text-align: right;
        border-top: 1px solid #e5e5e5;
    }

        .ws-modal-footer .hint-text {
            color: #777;
            text-align: center;
        }

        .ws-modal-footer .btn + .btn {
            margin-bottom: 0;
            margin-left: 5px;
        }

    .form-control,
    .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .submit-btn {
        font-size: 15px;
        font-weight: bold;
    }

    .or-seperator {
        margin: 30px 0 10px;
        text-align: center;
        border-top: 1px solid #ccc;
    }

        .or-seperator i {
            padding: 0 10px;
            background: #f7f7f7;
            position: relative;
            top: -15px;
            z-index: 1;
        }

    .social-btn .btn {
        color: white !important;
        margin: 10px 0 0 15px;
        font-size: 15px;
        border-radius: 5px;
        font-weight: normal;
        border: none;
        transition: all 0.4s;
    }

        .social-btn .btn:first-child {
            margin-left: 0;
        }

        .social-btn .btn i {
            float: none;
            margin: 3px 10px 0 0px;
            min-width: 10px;
        }

    .input-group-addon .fa {
        font-size: 18px;
    }

    .modal-error {
        margin-bottom: 0px;
        margin-top: 10px;
    }

    #fb-login-btn {
        background-color: #7d97cd;
    }

        #fb-login-btn:hover {
            background-color: #3B5998;
        }

    #tw-login-btn {
        background-color: #7ec2f7;
    }

        #tw-login-btn:hover {
            background-color: #38a1f3;
        }

    #go-login-btn {
        background-color: #e78174;
    }

        #go-login-btn:hover {
            background-color: #dd4b39;
        }
</style>